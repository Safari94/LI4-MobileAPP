<Window x:Class="Mobile_APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="375" Width="407" ResizeMode="NoResize">
    <Grid Margin="0,0,24,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl Height="346" VerticalAlignment="Top" Margin="0,0,-24,0">
            <TabItem Header="MISSÃO">
                <Grid Background="#FFE5E5E5">
                    <Rectangle Fill="#FF0747F1" HorizontalAlignment="Left" Height="322" Stroke="Black" VerticalAlignment="Top" Width="395" Margin="0,0,0,-4"/>
                    <Rectangle x:Name="iphoto" Fill="#FFA1A6B2" HorizontalAlignment="Left" Height="298" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="375"/>
                    <Label Content="Missão Ativa" HorizontalAlignment="Left" Margin="27,17,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
                    <Label Content="Label" HorizontalAlignment="Left" Margin="109,17,0,0" VerticalAlignment="Top" Width="102" Foreground="White"/>
                    <Label Content="Tarefas" HorizontalAlignment="Left" Margin="27,86,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
                    <Label Content="Pontos de Interesse" HorizontalAlignment="Left" Margin="27,136,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
                    <Button x:Name="verTarefas" Content="Ver" HorizontalAlignment="Left" Margin="109,89,0,0" VerticalAlignment="Top" Width="54" Click="verTarefas_Click"/>
                    <Button Content="Ver" HorizontalAlignment="Left" Margin="174,136,0,0" VerticalAlignment="Top" Width="54" Click="Button_Click"/>
                    <Button x:Name="gravarVoz" Content="Gravador" HorizontalAlignment="Left" Height="20" Margin="46,217,0,0" VerticalAlignment="Top" Width="63"/>
                    <Button x:Name="np" Content="NotePad" HorizontalAlignment="Left" Height="21" Margin="165,216,0,0" VerticalAlignment="Top" Width="63" Click="button_Click_1"/>
                    <Button x:Name="iphoto1" Content="Cãmara" HorizontalAlignment="Left" Height="21" Margin="294,216,0,0" VerticalAlignment="Top" Width="69" Click="iphoto1_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="RELATORIO" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="74" Margin="0">
                <Grid Background="#FF0747F1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="362*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Fill="#FFA1A6B2" HorizontalAlignment="Left" Height="250" Margin="6,36,0,0" Stroke="Black" VerticalAlignment="Top" Width="307" Grid.Column="1"/>
                    <Label Content="Nome Ficheiro" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Grid.Column="1" Height="26" Width="79"/>
                    <TextBox x:Name="nomefich" HorizontalAlignment="Left" Height="23" Margin="92,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="16" Grid.Column="1"/>
                    <Button x:Name="saveNome" Content="Ok" HorizontalAlignment="Left" Margin="238,61,0,0" VerticalAlignment="Top" Width="50" Height="23" Grid.Column="1" Click="saveNome_Click"/>
                    <Separator HorizontalAlignment="Left" Height="4" Margin="7,112,0,0" VerticalAlignment="Top" Width="306" Background="White" Grid.Column="1"/>
                    <Label Content="Ficheiro" HorizontalAlignment="Left" Margin="34,137,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" Grid.Column="1" Height="26" Width="55"/>
                    <Label x:Name="ficheiro" Content="" HorizontalAlignment="Left" Margin="92,137,0,0" VerticalAlignment="Top" Width="172" Grid.Column="1" Height="26"/>
                    <Button x:Name="pdf" Content="Criar Ficheiro" HorizontalAlignment="Left" Margin="119,183,0,0" VerticalAlignment="Top" Width="93" Click="pdf_Click" Grid.Column="1" Height="20"/>
                    <Button Content="Cancelar" HorizontalAlignment="Left" Margin="180,251,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="20"/>
                    <Separator HorizontalAlignment="Left" Height="12" Margin="6,203,0,0" VerticalAlignment="Top" Width="306" Foreground="White" Background="White" Grid.Column="1"/>
                    <Button Content="Confirmar" HorizontalAlignment="Left" Margin="58,251,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="20"/>
                </Grid>
            </TabItem>
            <TabItem Header="EXPORTAR/IMPORTAR" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="134" Margin="0,0,-65,0">
                <Grid Background="#FF0747F1">
                    <Rectangle Fill="#FFA1A6B2" HorizontalAlignment="Left" Height="251" Margin="45,31,0,0" Stroke="Black" VerticalAlignment="Top" Width="303"/>
                    <Label Content="Importar" HorizontalAlignment="Left" Margin="158,31,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
                    <Separator HorizontalAlignment="Left" Height="20" Margin="46,140,0,0" VerticalAlignment="Top" Width="302" Background="White"/>
                    <Label Content="Exportar" HorizontalAlignment="Left" Margin="160,160,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
                    <Button x:Name="rececpaoDados" Content="Importar Dados" HorizontalAlignment="Left" Margin="146,82,0,0" VerticalAlignment="Top" Width="91" Click="rececpaoDados_Click"/>
                    <Button Content="Exportar Dados" HorizontalAlignment="Left" Margin="146,208,0,0" VerticalAlignment="Top" Width="91" Click="Button_Click_2"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
